{
  "name": "express",
  "version": "1.0.0",
  "description": "This is the express backend for the bugtracker I'm building.",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "tsnd ./src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "test": "jest",
    "testw": "jest --watch",
    "testd": "jest --detectOpenHandles",
    "lint": "eslint . --ext .ts --fix --ignore-path .gitignore",
    "ddev": "docker compose up --remove-orphans api redis postgres",
    "dddev": "docker compose up --remove-orphans -d",
    "pgadmin": "docker compose up --remove-orphans",
    "ddown": "docker compose down",
    "dbuild": "docker build -t cstudent/express-backend .",
    "drun": "docker run --rm -p 3000:3000 --env-file .env cstudent/express-backend",
    "dshell": "docker run --rm -it --env-file .env cstudent/express-backend /bin/bash",
    "dkill": "docker stop $(docker ps -a -q)",
    "dclear": "docker rm $(docker ps -a -q)",
    "dpsql": "docker exec -it postgres_container psql -U bugtracker_backend_database_user -d bugtracker_backend_database"
  },
  "dependencies": {
    "@apollo/server": "^4.7.4",
    "@opentelemetry/api": "^1.4.1",
    "@opentelemetry/auto-instrumentations-node": "^0.36.5",
    "@opentelemetry/instrumentation-express": "^0.32.1",
    "@opentelemetry/sdk-node": "^0.38.0",
    "compression": "^1.7.4",
    "connect-redis": "^7.0.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "graphql": "^16.7.1",
    "helmet": "^6.1.5",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.1",
    "pg": "^8.10.0",
    "redis": "^4.6.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.15.11",
    "@types/nodemailer": "^6.4.7",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.5.0",
    "node-mocks-http": "^1.12.2",
    "openapi-types": "^12.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}