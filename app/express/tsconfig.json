{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*", "docs/__safety", "src/__test__",
  ],
}